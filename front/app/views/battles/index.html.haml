= stylesheet_link_tag "battles"

.modal.js-planetinfo.fade.hide
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
    %h3.js-header
  .modal-body
    %p.js-body
  .modal-footer
    %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Withdraw
    %button.btn.btn-danger.js-attack Attack!

.modal.js-victory.fade.hide
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
    %h3 You've win the battle!

.modal.js-defeat.fade.hide
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
    %h3 You've lost the battle.

.span1
  = link_to "Logout", destroy_user_session_path, :class => "btn", :method => :delete

.alert.alert-error.span3.hide.js-defendalert
  %button.close{:type => "button", "data-dismiss" => "alert"}×
  %h4 Your Base is under attack!
  %p
  %p
    %button.btn.btn-danger.js-defend Fight

= javascript_tag do
  window.Userinfo = {token: "#{current_user.id}", id: "#{current_user.email}"};
= javascript_include_tag "battles"
